        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="WindowData" Height="450" Width="800" Background="#FFC5C3C3"
          ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dgrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="49,41,49,41" FontSize="17" Grid.ColumnSpan="2"/>
        <Button  Content="Refresh" Margin="49,7,158,379" Click="Button_Click"/>

    </Grid>
</Window>
